#!/bin/bash

# homebrew
command -v brew >/dev/null && \
  brew update && sleep 1s && \
  brew upgrade && sleep 1s && \
  brew cleanup --force && sleep 1s && \
  brew prune

# npm
if [ -n "$(command -v npm)" ]; then
  current_npm_version="$(npm -v | tr -d '\n')"
  latest_npm_version="$(npm v npm@next version | tr -d '\n')"
  [ $current_npm_version != $latest_npm_version ] && npm install -g npm@next
  npm update -g && ncu -g
fi

# vim
command -v vim >/dev/null && \
  vim +PlugUpgrade +PlugUpdate +PlugDiff
